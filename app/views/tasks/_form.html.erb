<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="task_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="task_expired_at">
    <%= form.label :expired_at %>
    <%= form.text_field :expired_at,class: "form-control", placeholder: "1/1" %>
  </div>
   <div class="task_status">
    <%= form.label :status %>
    <%= form.select :status, ["todo","doing","done"] %>
  </div>
    <div class="task_priority">
    <%= form.label :priority %>
    <%= form.select :priority, ['low','medium','high'] %>
  </div>
    <div>
    <%= form.label :label %>
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
    </div>
  <%= form.submit %>
<% end %>
<%= link_to "タスク一覧画面にもどる", tasks_path %>