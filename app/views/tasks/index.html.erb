<h1> <%= t("activerecord.models.task") %>一覧</h1>
<p><%= notice %></p>

<table>
  <tr>
    <th><%= t("activerecord.attributes.task.title") %></th>
    
    <th><%= t("activerecord.attributes.task.content") %></tr>
   </tr>
 <% @tasks.each do |task| %>
    <tr>
       <td><%= task.title %></td>
       <td><%= task.content %></td>
       <td><%= link_to t('tasks.show.title'), task_path(task.id) %></td>
       <td><%= link_to t('tasks.edit.title'), edit_task_path(task.id) %></td>
       <td><%= link_to t('tasks.destroy.title'), task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>

    </tr>
 <% end %>
</table>
<br>
<%= link_to t("activerecord.models.task")+'を作成する', new_task_path %>
