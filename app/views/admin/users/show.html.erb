<% if logged_in? %>
   <% if current_user.admin? %>
     <h1><%= current_user.name %>は管理者です</h1>
     <h3><%= @user.name %>の詳細ページです</h3>
<p>メールアドレス: <%= @user.email %></p>
   <h3><%= @user.name %>タスクリスト</h3>
   <% @task.each do |task| %>
   <ul>
    <li class="index-content"><%= task.title %><br>
    <%= task.content %><br>
    <%= task.expired_at.to_s(:datetime_jp) %> <br>
    <%= task.status %><br>
    <%= task.priority %></li> 
     <% end %>  
</ul>
     <li> <%= link_to "プロフィールを編集",edit_admin_user_path(current_user.id) %></li>
 
    <% end %>
<% end %>
